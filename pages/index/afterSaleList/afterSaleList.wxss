page{
  background: #f5f5f5;
}

.list{
  padding: 20rpx 20rpx 0;
}
.list .item{
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}
.list .item+.item{
  margin-top: 20rpx;
}
.list .item .products{
  padding: 20rpx 0;
}
.list .item .product{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .item .product .img{
  width: 109rpx;
  height: 140rpx;
  flex-shrink: 0;
  margin: 0 40rpx 0 0rpx;
}
.list .item .product .right{
  flex-grow: 1;
  min-height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list .item .product .right .title{
  color: #4D4D4D;
  font-size: 26rpx;
}
.list .item .product .right .info{
  color: #B3B3B3;
  font-size: 24rpx;
}
.list .item .product .right .info text{
  margin-right: 10rpx;
}
.list .item .product .right .bottom{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.list .item .product .right .bottom .price{
  color: #4D4D4D;
  font-size: 30rpx;
}
.list .item .product .right .bottom .num{
  color: #666;
  font-size: 28rpx;
}

.aftersale-info{
  margin-top: 20rpx;
  color: #1A1A1A;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.aftersale-info-btn{
  height: 36rpx;
  width: 36rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #D6000F;
  border: 1px solid #D6000F;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.aftersale-info-text{
  margin-right: 10rpx;
}

.aftersale-btns{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.aftersale-btn{
  color: #808080;
  font-size: 26rpx;
  width: 160rpx;
  height: 60rpx;
  border: 1px solid #B3B3B3;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 60rpx;
  margin: 0 0 0 20rpx;
  padding: 0;
  background: #fff;
}
.aftersale-btn::after{
  border: none;
}