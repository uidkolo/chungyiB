.tab-box{
  height: 80rpx;
}
.tab{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #4D4D4D;
  font-size: 28rpx;
  border-top: 1px solid rgba(0,0,0,0.1);
  border-bottom: 1px solid rgba(0,0,0,0.1);
}
.tab-item{
  line-height: 80rpx;
}
.tab-item.active{
  line-height: 76rpx;
  color: #FF8400;
  border-bottom: 4rpx solid #FF8400;
}

.list{
  padding-left: 30rpx;
}
.item{
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item-left{
  display: flex;
  flex-direction: column;
}
.item-right{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.item-label{
  font-size: 30rpx;
  color: #4D4D4D;
}
.item-value{
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}