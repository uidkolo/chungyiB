page{
  background: #f5f5f5;
  padding-top: 100rpx;
  box-sizing: border-box;
}
.tab{
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #4D4D4D;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.tab-item{
  width: 60rpx;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}
.tab-active{
  color: #297ACC;
  border-bottom: 4rpx solid #297ACC;
  height: 56rpx;
}

.new-title{
  padding: 10rpx 30rpx;
  color: #666666;
  font-size: 22rpx;
  border-bottom: 1px solid #f5f5f5;
}
.new{
  margin-bottom: 20rpx;
  background: #fff;
}

.list-item{
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.list-item-left{
  display: flex;
  align-items: center;
  color: #4D4D4D;
  font-size: 30rpx;
}
.list-item-avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 88rpx;
  margin-right: 10rpx;
}
.list-item-right{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  color: #999999;
  font-size: 24rpx;
}
.list-item-money{
  font-size: 30rpx;
  color: #4D4D4D;
  margin-bottom: 10rpx;
}