page{
  background: #f5f5f5;
}
.user-box{
  height: 198rpx;
}
.user{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 2;
  padding: 40rpx 30rpx;
  background: linear-gradient(#4079FF,#297ACC);
  display: flex;
  align-items: center;
}
.user-right{
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.avatar{
  width: 128rpx;
  height: 128rpx;
  border-radius: 128rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.user-name{
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
.user-bind{
  width: 140rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 40rpx;
  margin-left: 30rpx;
}
.user-num{
  font-size: 26rpx;
  color: rgba(255,255,255,0.7);
  display: flex;
  align-items: center;
}
.user-num-line{
  width: 1rpx;
  height: 20rpx;
  display: block;
  background: rgba(255,255,255,0.7);
  margin: 0 20rpx;
}

.earn{
  padding: 30rpx;
}
.earn-month{
  background: #fff;
  border-radius: 8rpx;
}
.earn-month-top{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  color: #333333;
  font-size: 26rpx;
}
.earn-month-top-num{
  font-size: 48rpx;
  color: #E30613;
  margin-top: 10rpx;
}
.earn-month-top-tip{
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #A1A6B3;
  margin-top: 10rpx;
}
.earn-month-bottom{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0;
}
.earn-month-bottom-item{
  width: 33.33%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.earn-label{
  color: #999999;
  font-size: 24rpx;
}
.earn-value{
  font-size: 30rpx;
  color: #333333;
  margin-top: 10rpx;
}
.earn-value.red{
  color: #E30613;
}
.earn-select{
  display: flex;
  align-items: center;
}
.earn-select-icon{
  width: 16rpx;
  height: 10rpx;
  margin-left: 10rpx;
}

.earn-detail{
  border-radius: 8rpx;
  margin-top: 30rpx;
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
}
.earn-detail-item{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.earn-detail-item-top{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.earn-detail-btn{
  width: 140rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #CCCCCC;
  border-radius: 8rpx;
  color: #333333;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.order{
  background: #fff;
  border-radius: 8rpx;
  margin-top: 30rpx;
}
.order .more{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 78rpx;
  padding: 0 30rpx;
  color: #1A1A1A;
  font-size: 30rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.order .more .title-right{
  color: #999999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.order .more .icon{
  width: 14rpx;
  height: 24rpx;
  margin-left: 20rpx;
}
.order .box{
  display: flex;
  align-items: center;
  padding: 30rpx;
  justify-content: space-between;
}
.order .box .item{
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  position: relative;
}
.order .box .item .num{
  position: absolute;
  top: -10rpx;
  right: 0;
  font-size: 20rpx;
  color: #E30613;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 28rpx;
  padding: 0 10rpx;
  border: 1rpx solid #E30613;
}
.order .box .icon{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.code-box{
  padding: 0 30rpx 30rpx;
}
.code{
  border-radius: 8rpx;
  background: #fff;
  padding: 30rpx;
}
.code-title{
  font-size: 30rpx;
  color: #333333;
  text-align: center;
}
.code-btn-box{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.code-left{
  height: 90rpx;
  width: 300rpx;
  border: 1px solid #E5BF00;
  color: #E5BF00;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}
.code-right{
  height: 90rpx;
  width: 300rpx;
  border: 1px solid #297ACC;
  background: #297ACC;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}

.design{
  position: fixed;
  right: 30rpx;
  top: 740rpx;
  width: 90rpx;
  height: 90rpx;
  background: #FF8400;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 90rpx;
  z-index: 999;
  font-size: 18rpx;
  color: #fff;
  flex-direction: column;
}
.design-icon{
  width: 30rpx;
  height: 34rpx;
}


.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0,0,0,0.5);
  z-index: 999;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mask-code-box{
  background: #fff;
  border-radius: 8rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  position: relative;

}
.mask-code{
  width: 400rpx;
  height: 400rpx;
}
.mask-code-btn{
  width: 300rpx;
  height: 80rpx;
  background: #4079FF;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  margin-top: 60rpx;
  border-radius: 8rpx;
}
.mask-close{
  position: absolute;
  top: -100rpx;
  right: -40rpx;
}